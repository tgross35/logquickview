    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build & debug with nginx log input",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/bin/${fileBasenameNoExtension}.out",
            // "args": ["< ../test/nginx_stream.log"],
            "args": ["${workspaceFolder}/test/nginx_stream.log"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
